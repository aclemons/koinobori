{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "astral-sh/uv",
      "fileMatch": [
        "^README\\.md"
      ],
      "matchStrings": [
        "You need uv (?<currentValue>.*)\\.\\n",
        "astral\\.sh/uv/(?<currentValue>.*)/install\\.sh"
      ]
    },
    {
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "opentofu/opentofu",
      "fileMatch": [
        "^tf/\\.opentofu-version$"
      ],
      "matchStrings": [
        "(?<currentValue>.*)"
      ]
    },
    {
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "opentofu/opentofu",
      "fileMatch": [
        "^tf/.*\\.tf$"
      ],
      "matchStrings": [
        "required_version\\s=\\s\"(?<currentValue>.*?)\""
      ]
    }
  ],
  "extends": [
    "config:best-practices",
    ":maintainLockFilesMonthly",
    ":separateMajorReleases",
    ":separateMultipleMajorReleases",
    ":separatePatchReleases",
    "customManagers:dockerfileVersions",
    "customManagers:githubActionsVersions",
    "schedule:earlyMondays"
  ],
  "ignoreTests": false,
  "packageRules": [
    {
      "description": "Exclude our docker image from docker-compose updates.",
      "enabled": false,
      "matchDepNames": [
        "aclemons/koinobori"
      ],
      "matchManagers": [
        "docker-compose"
      ]
    },
    {
      "description": "`.python-version` is synced to the AWS lambda docker image version.",
      "enabled": false,
      "matchManagers": [
        "pyenv"
      ]
    },
    {
      "description": "Disable pyproject.toml python updates, we sync this to AWS lambda/python Docker image",
      "enabled": false,
      "matchDepNames": [
        "python"
      ]
    },
    {
      "description": "Disable terraform updates (renovate does not yet support opentofu)",
      "enabled": false,
      "matchDepNames": [
        "hashicorp/terraform"
      ],
      "matchDepTypes": [
        "required_version"
      ]
    },
    {
      "groupName": "uv monorepo",
      "matchDepNames": [
        "astral-sh/uv",
        "ghcr.io/astral-sh/uv"
      ]
    }
  ],
  "pre-commit": {
    "enabled": true
  },
  "rangeStrategy": "pin",
  "timezone": "Asia/Tokyo"
}
