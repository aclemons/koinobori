{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        "helpers:pinGitHubActionDigests",
        ":maintainLockFilesMonthly"
    ],
    "separateMinorPatch": true,
    "separateMajorMinor": true,
    "ignoreTests": false,
    "docker": {
        "pinDigests": true
    },
    "packageRules": [
        {
            "description": "Exclude our docker image from docker-compose updates.",
            "matchManagers": [
                "docker-compose"
            ],
            "matchPackageNames": [
                "aclemons/koinobori"
            ],
            "enabled": false
        },
        {
            "description": "`.python-version` is synced to the AWS lambda docker image version.",
            "enabled": false,
            "matchManagers": [
                "pyenv"
            ]
        },
        {
            "description": "Pin poetry managed versions",
            "matchManagers": [
                "poetry"
            ],
            "rangeStrategy": "pin"
        },
        {
            "matchDepNames": "ubuntu gha runner",
            "extractVersion": "^ubuntu(?<version>\\d\\d).*?$"
        }
    ],
    "regexManagers": [
        {
            "fileMatch": [
                "^README\\.md"
            ],
            "matchStrings": [
                "and Poetry (?<currentValue>.*)\\.\\n",
                "POETRY_VERSION=(?<currentValue>.*) python3 "
            ],
            "depNameTemplate": "python-poetry/poetry",
            "datasourceTemplate": "github-releases"
        },
        {
            "fileMatch": [
                "^.github/(?:workflows|actions)/.+\\.ya?ml$"
            ],
            "matchStrings": [
                "ubuntu-(?<currentValue>\\d\\d|latest)(\\.\\d\\d)?"
            ],
            "depNameTemplate": "ubuntu gha runner",
            "packageNameTemplate": "actions/runner-images",
            "datasourceTemplate": "github-releases",
            "versioningTemplate": "loose",
            "currentValueTemplate": "{{{replace 'latest' '16' currentValue}}}",
            "autoReplaceStringTemplate": "ubuntu-{{{newValue}}}.04"
        }
    ]
}
